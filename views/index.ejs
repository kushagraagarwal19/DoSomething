<%include partials/header %>
    <div class="container center">
        <div class="card">
            <h2>Add User</h2>
        </div>
    </div>
    <% if(errors != undefined){ %>
        <ul>
            <% errors.forEach(function(error){ %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
            <div class="container center">
                <div class="card">
                    <div class="row" style="padding: 20px">
                        <form class="col s12" method="POST" action="/users/add">
                            <div class="row">
                                <div class="input-field col s6">
                                    <input placeholder="First Name" id="first_name" type="text" class="validate" name="first_name">
                                </div>
                                <div class="input-field col s6">
                                    <input id="birthday" type="text" class="datepicker" name="birthday">
                                    <label for="birthday">Birthday</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="email" type="email" class="validate" name="email">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="cell" type="tel" class="validate" name="cell">
                                    <label for="cell">Cell Number (optional)</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="password" type="password" class="validate" name="password">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <%include partials/footer%>
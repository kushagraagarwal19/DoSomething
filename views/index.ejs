<%include partials/header %>
<h1>Add Customer</h1>
<% if(errors != undefined){ %>
    <ul>
        <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>
<div id="fb-root"></div>
